[speedtest]
command=${HOME}/.dotfiles/scripts/speedtest.sh --inlabel "download: " --outlabel "upload: "
interval=1

[mem]
command=echo "mem (available): $(free -h --giga | awk '$0=$7')"
interval=1

[vpn]
command=${HOME}/.dotfiles/scripts/vpn-status.sh
markup=pango
interval=1

[time-utc]
command=echo "<span foreground='yellow'>utc:</span> $(date --utc +%T)"
markup=pango
interval=1

[time-local]
command=echo "<span foreground='yellow'>local:</span> $(date +%T)"
markup=pango
interval=1
